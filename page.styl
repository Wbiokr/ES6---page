.wkr_page
  width 100%
  display flex
  height 60px
  align-items center
  section
    margin-right 20px
    span
      border 1px solid #ccc
      padding 3px 10px
      margin 0 4px
      cursor pointer
      float left
      &:hover
        color red
        
      &.more
        border 0
        line-height 100%
      &.selected
        color red
        border-color @color
    input
      float left
      height 23px
      width 36px
      text-align center
      display inline
      margin 0 4px
    i
      float left
      font-style normal
      line-height 28px